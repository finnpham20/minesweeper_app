<div class="container mt-lg-3">

  <div class="row">
    <div class="col-sm-6">
      <h2>Recent created boards:</h2>
    </div>
    <div class="col-sm-6">
      <div class="col-sm d-flex justify-content-end">
        <%= link_to 'New Board', new_board_path, class: "btn btn-success btn-sm m-2" %>
      </div>
    </div>
  </div>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Board Name</th>
      <th>Email</th>
      <th>Created At</th>
    </tr>
    </thead>
    <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= link_to board.name, board_path(board) %></td>
        <td><%= board.email %></td>
        <td><%= board.created_at.strftime("%F at %I:%M%p") %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div>
    <div class="col-sm d-flex justify-content-end">
      <%= link_to 'View all generated boards', boards_path, class: "btn btn-primary btn-sm m-2" %>
    </div>
  </div>
</div>
